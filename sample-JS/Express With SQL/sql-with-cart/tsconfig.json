{
    "compilerOptions": {
      "esModuleInterop": true,
      "target": "es5",
      "module": "commonjs",
      "lib": ["ES6", "DOM"],
      "outDir": "./build",
      "strict": true,
      "noImplicitAny": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "exclude": ["node_modules", "tests"]
}
